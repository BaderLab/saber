# Include the README(s)
include README.md CONTRIBUTING.md Dockerfile

# Include the license file
include LICENSE.txt

# Include config file(s)
global-include *.ini *.yml

# Include 'default' dataset(s)
# graft saber/datasets

# Include pretrained model(s)
graft saber/pretrained_models

# Include the test resources
graft saber/tests

# Include documentation
recursive-include docs *.md

# Don't include notebooks
prune notebooks

# Don't include images
prune img
